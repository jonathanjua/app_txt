{
  "name": "app-txt",
  "version": "1.0.0",
  "description": "Editor de texto simples com Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build:css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/app.css --minify",
    "prestart": "npm run build:css",
    "prebuild": "npm run build:css",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac"
  },
  "keywords": ["editor", "text", "electron"],
  "author": "Jonathan de Almeida <jonathan.almeida@gmail.com>",
  "homepage": "https://github.com/jonathanjua/app-txt",
  "license": "MIT",
  "dependencies": {
    "@fontsource/jetbrains-mono": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.app-txt.editor",
    "productName": "Editor de Texto",
    "icon": "assets/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "assets/**",
      "node_modules/@fontsource/jetbrains-mono/**"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "maintainer": "Jonathan de Almeida <jonathan.almeida@gmail.com>"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    }
  }
}
