{
  "name": "app-txt",
  "version": "1.0.3",
  "description": "Editor de texto simples",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build:css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/app.css --minify",
    "prestart": "npm run build:css",
    "prebuild": "npm run build:css",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "editor",
    "text",
    "electron"
  ],
  "author": "Jonathan de Almeida <jonathan.almeida@gmail.com>",
  "homepage": "https://github.com/jonathanjua/app-txt",
  "license": "MIT",
  "overrides": {
    "wrappy": "1.0.2",
    "core-util-is": "1.0.2"
  },
  "dependencies": {
    "@fontsource/jetbrains-mono": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.app-txt.editor",
    "productName": "Editor de Texto",
    "icon": "build/icon.png",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "worker-text.js",
      "index.html",
      "assets/**",
      "node_modules/@fontsource/jetbrains-mono/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "win/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons",
      "category": "Utility",
      "maintainer": "Jonathan de Almeida <jonathan.almeida@gmail.com>"
    },
    "mac": {
      "target": "dmg",
      "icon": "mac/icon.png",
      "category": "public.app-category.utilities"
    }
  }
}
